/* pages/nodeDetails/nodeDetails.wxss */
.detailsList{
  background-color:#f8f8f8;
  padding:20rpx 0;
}
.detailsList>view{
  background-color:#fff;
  padding:20rpx;
}
.detailsList>view:nth-child(2){
  padding-top:0;
}
.detailsList:nth-child(2){
  padding-top:0;
}
.bindingHistory{
  padding-top:20rpx;
}
.historyTitle{
  padding:20rpx;
}
.nodeNumber{
  color:#0089e1;
  font-weight:bold;
}
.bingingCattleNo{
  color:#0089e1;
}
.bindingBtn{
  display:flex;
}
.bindingBtn .normalBtn{
  width:35%;
  background-color:transparent;
  border:1px solid #53bc53;
  color:#53bc53;
  font-size:32rpx;
}
button[disabled][type="default"], wx-button[disabled]:not([type]){
  background-color:transparent;
  color:#ccc;
  border-color:#ccc;
}
