.table {
  border: 0px solid darkgray;
  margin-top:20rpx;
}
.tr,.tableTr {
  display: flex;
  width: 100%;
  justify-content: center;
  min-height:2.5rem;
  align-items: center;
  border-bottom:1px solid #ccc;
}
.tableTr {
  min-height: 2rem;
  padding:0.25rem 0;
}
.td {
    justify-content: center;
    text-align: center;
    word-wrap:break-word; 
	  word-break:break-all;
}
.bg-w{
  background: #53bc53;
  border-bottom:0;
}
.bg-g{
  border-bottom:1px solid #ccc;
}
.th {
  justify-content: center;
  background: #53bc53;
  color: #fff;
  display: flex;
  height: 2.5rem;
  align-items: center;
}
.th:nth-child(1){
  width:25%;
}
.th:nth-child(2){
  width:75%;
}
.td:nth-child(1){
  width:25%;
}
.td:nth-child(2){
  width:75%;
}